<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<DialogPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: transparent;" stylesheets="@light-theme.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.pioneers.controller.MapEditorController">
    <content>
        <AnchorPane prefHeight="409.0" prefWidth="600.0">
            <Label layoutX="64.0" layoutY="30.0" prefHeight="35.0" prefWidth="464.0" text="%mapname">
                <font>
                    <Font size="24.0" />
                </font>
            </Label>
            <TextField fx:id="mapName_field" layoutX="64.0" layoutY="78.0" prefHeight="60.0" prefWidth="464.0" promptText="%mapnamepreview">
                <font>
                    <Font size="18.0" />
                </font>
            </TextField>
            <Button id="create_button" fx:id="save_button" layoutX="192.0" layoutY="360.0" mnemonicParsing="false" prefHeight="55.0" prefWidth="220.0" styleClass="normalButton" text="%savemap" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Button>
            <Button id="cancel_button" fx:id="cancel_button" layoutX="241.0" layoutY="433.0" mnemonicParsing="false" prefHeight="43.0" prefWidth="118.0" styleClass="smallButton" text="%cancel" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Button>
            <Label layoutX="64.0" layoutY="154.0" prefHeight="35.0" prefWidth="463.0" text="%mapdesc">
                <font>
                    <Font size="24.0" />
                </font>
            </Label>
            <Label id="error_Label" fx:id="error_Label" alignment="CENTER" layoutX="67.0" layoutY="325.0" prefHeight="25.0" prefWidth="461.0" textAlignment="CENTER">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
         <TextArea fx:id="mapDesc_field" layoutX="68.0" layoutY="203.0" prefHeight="113.0" prefWidth="457.0" promptText="%mapdescpreview" wrapText="true">
            <font>
               <Font size="18.0" />
            </font>
         </TextArea>
        </AnchorPane>
    </content>
</DialogPane>
